                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/gotham_rounded_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
